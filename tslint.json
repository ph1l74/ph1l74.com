{
    "defaultSeverity": "error",
    "extends": [
        "tslint-config-airbnb"
    ],
    "jsRules": {},
    "rules": {
        "variable-name": false,
        "quotemark": [
            true,
            "single"
        ],
        "import-name": [
            true,
            {
                "react": "React",
                "react-dom/client" : "ReactDOM"
            }
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore",
                    "exports": "ignore",
                    "imports": "ignore"
                },
                "esSpecCompliant": true
            }
        ]
    },
    "rulesDirectory": []
}